  <%- include('../includes/resources') %>
</head>
  <body>
    <%- include('../includes/header') %>

    <!-- Redoc Library-->
    <redoc id="docs"></redoc>
    <script src="https://cdn.jsdelivr.net/npm/redoc@next/bundles/redoc.standalone.js"> </script>
    <script>
      function redocInit() {
        const themeColors = extra.themes[localStorage.getItem("currentTheme")].colors;
        Redoc.init(
          'resources/api/api_docs.json',
          {
            scrollYOffset: 'header',
            theme: {
              colors: {
                primary: {
                  main: themeColors?.icon ?? '#0bda51',
                }
              }
            }
          },
          document.getElementById('docs')
        );
      }
      redocInit();
      document.querySelector('#themes-box').addEventListener("change", () => setTimeout(redocInit));
    </script>

    <%- include('../includes/footer'); %>
  </body>
</html>
